<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp">

    <ImageView
        android:id="@+id/img_seat"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:src="@drawable/ic_event_seat_vacant_24dp"
        android:layout_centerHorizontal="true">


    </ImageView>
    <ImageView
        android:id="@+id/img_seat_selected"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:src="@drawable/ic_event_seat_selected_24dp"
        android:layout_centerHorizontal="true"
        android:visibility="invisible">
    </ImageView>

    <ImageView
        android:id="@+id/img_seat_booked"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:src="@drawable/ic_event_seat_booked_24dp"
        android:layout_centerHorizontal="true"
        android:visibility="invisible">
    </ImageView>
</RelativeLayout>